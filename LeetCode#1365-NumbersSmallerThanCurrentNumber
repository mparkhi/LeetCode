class Solution {
    public int[] smallerNumbersThanCurrent(int[] nums) {
        HashMap<Integer, Integer> map = new HashMap<>();
        int [] result = new int [nums.length];
        int [] copy = nums.clone();
        Arrays.sort(copy);

        for(int i = 0 ; i < nums.length; i++){
            map.putIfAbsent(copy[i], i);
        }
        for(int i = 0; i < nums.length; i++){
            result[i] = map.get(nums[i]);
        }
        return result;
    }
}
